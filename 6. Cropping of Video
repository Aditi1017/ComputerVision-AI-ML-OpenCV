    "import cv2\n",
    "\n",
    "cap = cv2.VideoCapture(0)\n",
    "\n",
    "while True:\n",
    "    status , photo = cap.read()\n",
    "    newphoto = photo[160:450 , 200:500] #cropping if video\n",
    "    cv2.imshow(\"hi\", newphoto)\n",
    "    if cv2.waitKey(1) == 27:\n",
    "        break\n",
    "        \n",
    "cv2.destroyAllWindows()\n",
    "cap.release()"
